generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./mercurius.db"
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  password  String

  @@map("users")
}

model Language {
  id      String  @id @default(uuid())
  name    String  @unique
  lang    String
  country String
  terms   Term[]

  @@map("languages")
}

model Term {
  id      String    @id @default(uuid())
  langId  String
  code    String
  value   String

  lang    Language  @relation(fields:[langId], references: [id])

  @@map("terms")
}
