generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./mercurius.db"
}

model User {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  password  String

  @@map("users")
}

model Token {
  id            String      @id @default(uuid())
  issuer        String      @unique 
  value         String
  revoked       Boolean?
  revoke_date   DateTime?
  revoke_delay  Int?

  @@map("tokens")
}

model Language {
  id        String  @id @default(uuid())
  name      String  @unique
  lang      String
  country   String
  terms     Term[]
  profiles  Profile[]

  @@map("languages")
}

model Term {
  id      String    @id @default(uuid())
  langId  String
  code    String
  value   String
  lang    Language  @relation(fields:[langId], references: [id])

  @@map("terms")
}

model Profile {
  id        String    @id @default(uuid())
  langId    String
  name      String
  job_title String
  summary   String
  biography String
  photo_sm  String
  photo_lg  String
  activity  String
  lang      Language  @relation(fields:[langId], references: [id])

  @@map("profiles")
}